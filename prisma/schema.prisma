generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName     String
  userName     String
  password     String
  email        String   @unique
  profilePhoto String?
  address      String?  @default("")
  phone        String?  @default("")
  bio          String?  @default("")
  gender       Gender   @default(OTHER)
  isDeleted    Boolean  @default(false)
  status       Status   @default(ACTIVE)
  role         userRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userProfile userProfile?
  bookings    Booking[]    @relation("UserBookings")
  Review      Review[]

  @@map("users")
}

model userProfile {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  userId     String @unique
  bio        String @default("")
  profession String @default("")
  address    String @default("")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("userProfile")
}

model Contact {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  contactNo String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("contacts")
}

model Flat {
  id                   String   @id @default(auto()) @map("_id") @db.ObjectId
  squareFeet           Int
  userId               String   @db.ObjectId
  totalBedrooms        Int
  totalRooms           Int
  utilitiesDescription String
  location             String
  description          String
  photos               String[]
  rent                 Int
  parking              Boolean  @default(true)
  availability         Boolean? @default(true)
  advanceAmount        Int
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  bookings Booking[] @relation("FlatBookings")
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  name      String
  email     String
  rating    Int
  message   String
  photo     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Booking {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  userId    String        @db.ObjectId
  flatId    String        @db.ObjectId
  status    BookingStatus @default(PENDING)
  isBooked  Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], name: "UserBookings")
  flat Flat @relation(fields: [flatId], references: [id], name: "FlatBookings")
}

model TeamMember {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  email        String
  contactNo    String
  profilePhoto String?
  role         String
  facebookLink String?
  twitterLink  String?
  linkedinLink String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum BookingStatus {
  PENDING
  BOOKING
  REJECTED
}

enum Status {
  ACTIVE
  BLOCKED
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum userRole {
  ADMIN
  USER
  SUPER_ADMIN
}
